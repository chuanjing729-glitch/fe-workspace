{
  "type": "module",
  "name": "fe-workspace",
  "version": "1.0.0",
  "description": "前端工程效率平台",
  "main": "index.js",
  "scripts": {
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "publish": "node scripts/publish-packages.cjs",
    "publish:webpack-spec-plugin": "node scripts/publish-packages.cjs webpack-spec-plugin",
    "publish:core-utils": "node scripts/publish-packages.cjs core-utils",
    "publish:vue2-toolkit": "node scripts/publish-packages.cjs vue2-toolkit",
    "publish:minor": "node scripts/publish-packages.cjs \"\" minor",
    "publish:major": "node scripts/publish-packages.cjs \"\" major",
    "build": "pnpm -r --stream build",
    "test": "pnpm -r --stream test",
    "dev": "pnpm -r --stream --parallel dev",
    "publish:webpack-coverage-plugin": "node scripts/publish-packages.cjs @51jbs/webpack-coverage-plugin",
    "build:webpack-coverage-plugin": "cd packages/webpack-coverage-plugin && npm run build",
    "test:webpack-coverage-plugin": "cd packages/webpack-coverage-plugin && npm test",
    "publish:webpack-api-tracker-plugin": "node scripts/publish-packages.cjs @51jbs/webpack-api-tracker-plugin",
    "build:webpack-api-tracker-plugin": "cd packages/webpack-api-tracker-plugin && npm run build",
    "test:webpack-api-tracker-plugin": "cd packages/webpack-api-tracker-plugin && npm test"
  },
  "keywords": [
    "frontend",
    "monorepo",
    "pnpm",
    "vitepress",
    "documentation"
  ],
  "author": "chuanjing.li",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.0.0",
    "favicons": "^7.2.0",
    "mermaid": "^11.12.2",
    "vitepress": "^1.0.0",
    "vitepress-plugin-mermaid": "^2.0.17",
    "vue": "^3.5.25"
  },
  "lint-staged": {
    "packages/*/README.md": [
      "node scripts/sync-package-docs.cjs",
      "git add docs"
    ]
  }
}