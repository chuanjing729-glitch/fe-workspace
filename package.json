{
  "type": "module",
  "name": "fe-workspace",
  "version": "1.0.0",
  "description": "前端工程效率平台",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "docs:dev": "vitepress dev docs",
    "docs:sync": "node scripts/sync-package-docs.cjs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "publish:dry-run": "node scripts/publish-packages.js --dry-run",
    "publish": "node scripts/publish-packages.js",
    "changeset": "changeset",
    "version:bump": "changeset version && pnpm install --no-frozen-lockfile",
    "publish:spec-plugin": "node scripts/publish-packages.js spec-plugin",
    "publish:core-utils": "node scripts/publish-packages.js core-utils",
    "publish:vue2-toolkit": "node scripts/publish-packages.js vue2-toolkit",
    "publish:minor": "node scripts/publish-packages.js \"\" minor",
    "publish:major": "node scripts/publish-packages.js \"\" major",
    "build": "pnpm -r --stream build",
    "test": "pnpm -r --stream test",
    "test:coverage": "pnpm -r --stream exec jest --coverage --threshold 80",
    "lint": "eslint . --ext .ts,.js,.vue --fix",
    "dev": "pnpm -r --stream --parallel dev",
    "publish:coverage-plugin": "node scripts/publish-packages.js @51jbs/coverage-plugin",
    "build:coverage-plugin": "pnpm --filter @51jbs/coverage-plugin run build",
    "test:coverage-plugin": "pnpm --filter @51jbs/coverage-plugin test",
    "publish:api-tracker-plugin": "node scripts/publish-packages.js @51jbs/api-tracker-plugin",
    "build:api-tracker-plugin": "pnpm --filter @51jbs/api-tracker-plugin run build",
    "test:api-tracker-plugin": "pnpm --filter @51jbs/api-tracker-plugin test",
    "clean:coverage": "find . -name \"node_modules\" -prune -o -type d \\( -name \"coverage\" -o -name \".coverage\" \\) -prune -exec rm -rf '{}' +"
  },
  "keywords": [
    "frontend",
    "monorepo",
    "pnpm",
    "vitepress",
    "documentation"
  ],
  "author": "chuanjing.li",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^18.0.0",
    "favicons": "^7.2.0",
    "mermaid": "^11.12.2",
    "vitepress": "^1.0.0",
    "vitepress-plugin-mermaid": "^2.0.17",
    "vue": "^3.5.25"
  },
  "lint-staged": {
    "packages/*/{README.md,src/**/*.ts,src/**/*.vue}": [
      "node scripts/sync-package-docs.cjs",
      "git add docs"
    ]
  }
}