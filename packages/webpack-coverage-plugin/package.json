{
  "name": "@51jbs/webpack-coverage-plugin",
  "version": "1.0.0",
  "description": "Webpack plugin for collecting code coverage during development and generating incremental self-testing reports",
  "main": "dist/cjs/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "import": "./dist/vite.js",
      "require": "./dist/cjs/vite.js"
    },
    "./rspack": {
      "types": "./dist/rspack.d.ts",
      "import": "./dist/rspack.js",
      "require": "./dist/cjs/rspack.js"
    },
    "./core": {
      "types": "./dist/core/plugin-core.d.ts",
      "import": "./dist/core/plugin-core.js",
      "require": "./dist/cjs/core/plugin-core.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc && tsc -p tsconfig.cjs.json && mkdir -p dist/infra/report/templates && cp -r src/infra/report/templates/* dist/infra/report/templates/ && mkdir -p dist/cjs/infra/report/templates && cp -r src/infra/report/templates/* dist/cjs/infra/report/templates/",
    "test": "jest",
    "dev": "tsc --watch"
  },
  "keywords": [
    "webpack",
    "plugin",
    "coverage",
    "istanbul",
    "self-testing"
  ],
  "author": "chuanjing.li",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "@types/babel__core": "^7.20.5",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/webpack": "^5.28.5",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^4.9.0",
    "unplugin": "^2.3.11",
    "vite": "^7.3.0",
    "webpack": "^5.104.0",
    "webpack-cli": "^6.0.1"
  },
  "peerDependencies": {
    "webpack": "^5.0.0"
  },
  "dependencies": {
    "babel-plugin-istanbul": "^7.0.1",
    "express": "^5.2.1",
    "istanbul-diff": "^2.0.0",
    "lodash": "^4.17.21",
    "simple-git": "^3.30.0"
  }
}
