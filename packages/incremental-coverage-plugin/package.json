{
    "name": "@51jbs/incremental-coverage-plugin",
    "version": "1.0.0",
    "description": "Lightweight incremental coverage plugin based on babel-plugin-istanbul and istanbul-diff",
    "keywords": [
        "coverage",
        "incremental",
        "istanbul",
        "webpack",
        "vite",
        "babel"
    ],
    "author": "chuanjing729",
    "license": "MIT",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.js",
            "import": "./dist/index.mjs"
        },
        "./webpack": {
            "types": "./dist/webpack.d.ts",
            "require": "./dist/webpack.js",
            "import": "./dist/webpack.mjs"
        },
        "./vite": {
            "types": "./dist/vite.d.ts",
            "require": "./dist/vite.js",
            "import": "./dist/vite.mjs"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "lint": "eslint src",
        "typecheck": "tsc --noEmit",
        "release": "echo 'Run: npm publish' && exit 1"
    },
    "dependencies": {
        "@babel/core": "^7.23.0",
        "babel-plugin-istanbul": "^7.0.0",
        "istanbul-lib-coverage": "^3.2.2",
        "istanbul-lib-report": "^3.0.1",
        "istanbul-reports": "^3.1.6",
        "istanbul-diff": "^1.1.0",
        "simple-git": "^3.25.0",
        "unplugin": "^1.14.1"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@vitest/coverage-v8": "^1.6.1",
        "tsup": "^8.0.0",
        "typescript": "^5.3.0",
        "vitest": "^1.0.0"
    },
    "peerDependencies": {
        "vite": "^3.0.0 || ^4.0.0 || ^5.0.0",
        "webpack": "^4.0.0 || ^5.0.0"
    },
    "peerDependenciesMeta": {
        "webpack": {
            "optional": true
        },
        "vite": {
            "optional": true
        }
    },
    "engines": {
        "node": ">=16.0.0"
    }
}